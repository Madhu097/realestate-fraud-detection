# ============================================================
# TRUTH IN LISTINGS - ENVIRONMENT CONFIGURATION
# ============================================================

# ============================================================
# APPLICATION SETTINGS
# ============================================================
APP_NAME="Truth in Listings"
APP_VERSION="2.0.0"
DEBUG=True
ENVIRONMENT=development  # development, staging, production

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
# SQLite (Development)
# DATABASE_URL=sqlite:///./sql_app.db

# PostgreSQL (Production)
DATABASE_URL=postgresql://fraud_user:fraud_password@localhost:5432/fraud_detection

# ============================================================
# REDIS CONFIGURATION
# ============================================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=86400  # 24 hours in seconds

# ============================================================
# CELERY CONFIGURATION
# ============================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================
# CORS SETTINGS
# ============================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ============================================================
# FILE UPLOAD SETTINGS
# ============================================================
UPLOAD_DIR=app/uploads
MAX_UPLOAD_SIZE=10485760  # 10 MB in bytes

# ============================================================
# DATASET CONFIGURATION
# ============================================================
DATASET_PATH=app/data/real_estate.csv

# ============================================================
# EXTERNAL API KEYS (Optional - Free Tiers)
# ============================================================
# Realty Mole API (RapidAPI) - 100 requests/month free
REALTY_MOLE_API_KEY=your_rapidapi_key_here

# LocationIQ - 10,000 requests/day free
LOCATIONIQ_API_KEY=your_locationiq_key_here

# OpenCage Geocoding - 2,500 requests/day free
OPENCAGE_API_KEY=your_opencage_key_here

# ============================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================
# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@frauddetection.com

# SendGrid (Alternative)
# SENDGRID_API_KEY=your_sendgrid_key_here

# ============================================================
# AUTHENTICATION & SECURITY
# ============================================================
# JWT Secret Key (Generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing
PASSWORD_HASH_SCHEMES=bcrypt

# ============================================================
# MONITORING & LOGGING
# ============================================================
# Sentry Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_here

# Log Level
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================
# RATE LIMITING
# ============================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================
# WEBSOCKET SETTINGS
# ============================================================
WS_HEARTBEAT_INTERVAL=30  # seconds
WS_MAX_CONNECTIONS=1000

# ============================================================
# FRAUD DETECTION SETTINGS
# ============================================================
# Fusion weights (must sum to 1.0)
FUSION_WEIGHT_PRICE=0.30
FUSION_WEIGHT_IMAGE=0.25
FUSION_WEIGHT_TEXT=0.25
FUSION_WEIGHT_LOCATION=0.20

# Fraud thresholds
FRAUD_PROBABILITY_THRESHOLD=0.6
PRICE_FRAUD_ZSCORE_THRESHOLD=2.0
LOCATION_FRAUD_DISTANCE_THRESHOLD=50  # km

# ============================================================
# CACHE SETTINGS
# ============================================================
CACHE_PRICING_DATA=True
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE=1000  # Maximum cached items

# ============================================================
# BACKGROUND TASKS
# ============================================================
ENABLE_SCHEDULED_TASKS=True
DATASET_UPDATE_HOUR=2  # 2 AM
CACHE_CLEAR_INTERVAL_HOURS=6

# ============================================================
# DEVELOPMENT SETTINGS
# ============================================================
# Auto-reload on code changes
AUTO_RELOAD=True

# Enable API documentation
ENABLE_DOCS=True

# Enable debug toolbar
ENABLE_DEBUG_TOOLBAR=False
